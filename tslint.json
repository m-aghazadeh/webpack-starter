{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "src/"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        150
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "only-arrow-functions": false,
    "no-trailing-whitespace": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        150
      ]
    }
  }
}